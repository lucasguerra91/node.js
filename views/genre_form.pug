extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genero:
      input#name.form-control(type='text', placeholder='Fantasia, poesia etc.' name='name' value=(undefined===genre ? '' : genre.name), required = 'true')
    button.btn.btn-primary(type='submit') Crear

  if errors 
    ul
      for error in errors
        li!= error.msg