extends layout

block content
  h1 #{title}: #{book.title}
  p= book.lifespan
  
  if bookinstance_books.length
  
    p #[strong Delete the following books instance before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book instances
    
      dl
      each instance in bookinstance_books
        dt 
          a(href=instance.url) #{instance.book}
        dd #{instance.status}

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete